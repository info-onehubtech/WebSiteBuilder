<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %></title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <h1><%= name %></h1>
    </header>
    <main>
        <section>
            <h2>About</h2>
            <p><%= about %></p>
        </section>
        <section>
            <h2>Services</h2>
            <ul>
                <% if (services && services.length) { services.forEach(function(service) { %>
                    <li><%= service %></li>
                <% }); } %>
            </ul>
        </section>
        <section>
            <h2>Contact</h2>
            <p>Phone: <%= contact.phone %></p>
            <p>Email: <%= contact.email %></p>
        </section>
    </main>
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> WebSiteBuilder</p>
    </footer>
</body>
</html>
